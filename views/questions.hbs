    <main>
      <div class="question-container">

      {{#each data}}
        <div class="questionOuterBox">
          <div class="col l9">
            <span class="title">
              <h1>{{this.title}}</h1>
              <h4>{{this.body}}</h4>
            </span>
          </div>
          <div class="col l3">
            <a href="/delete/{{this.id}}"><button>Delete</button></a>
            <a href="/answer/{{id}}"><button>Answers</button></a>
          </div>
        </div>
      {{/each}}

      </div>
      
      <section class="addQuestion">
        <h3>ADD NEW QUESTION</h3>
        <form action="/add-questions" method="post">
          <div>
            <label for="title">Title</label>
            <input type="text" name="title" value="">
          </div>
          <div>
            <label for="body">Details</label>
            <input type="text" name="body" value="">
          </div>
          <button>Add Question</button>
        </form>
      </section>
    </main>

