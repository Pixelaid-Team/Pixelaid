<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <title>{{title}}</title>
    <link rel="stylesheet" href="/main.css">
  </head>
  <body class="container">
    <section>

      <div class="link row">
        <div class="col l3">
        </div>
        <div class="col l9">
          <span class="title">
            <h1>{{title}}</h1>
            <h4>{{body}}</h4>
          </span>
        </div>
      </div>
    </section>
    <section>
      {{#each data}}
      <form action="/addAnswer/{{id}}" method="post">
          {{/each}}
        <div>
          <label for="body">answer</label>
          <input type="text" name="body" value="">
        </div>
        <button>Add answer</button>
      </form>

    </section>
    <section>

      <div class="link row">
        {{#each data}}

        <!-- <h5>username:{{this.username}}</h5> -->
        <h6>{{this.answer_body}}</h6>
      {{/each}}
      </div>
    </section>

  </body>
</html>
